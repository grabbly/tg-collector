# ArchiveDrop Environment Configuration
# Copy this file to .env and fill in your values

# Required: Telegram Bot Token (get from @BotFather)
BOT_TOKEN=your_bot_token_here

# Required: Absolute path to storage directory
STORAGE_DIR=/path/to/storage

# Optional: Rate limiting (messages per user per minute)
RATE_LIMIT_PER_MIN=10

# Optional: Maximum audio file size in bytes (default: 50MB)
MAX_AUDIO_BYTES=52428800

# Optional: Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Optional: Comma-separated list of allowed Telegram user IDs
# If not set, all users are allowed
# ALLOWLIST=123456789,987654321